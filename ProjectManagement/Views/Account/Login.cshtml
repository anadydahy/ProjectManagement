@model LoginView
@{
    Layout = null;

    ViewBag.Title = "User Login";

    var state = ViewData.ModelState.FirstOrDefault(x => x.Key.Equals("InvalidLoginAttempt")).Value;
    var errorMessage = state?.Errors[0].ErrorMessage;
}

<link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/signin.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

<main class="form-signin">
    <form method="post">
        <img class="mb-4" src="~/images/Employee.png" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        @if (errorMessage != null)
        {
            <span class="text-danger">@errorMessage</span>
            <br>
        }
        <div class="form-group">
            <label asp-for="Email" class="visually-hidden">@Html.DisplayNameFor(m => m.Email)</label>
            <input asp-for="Email" class="form-control" placeholder="Email address">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="visually-hidden">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        @*<div class="form-group">*@
        <div class="checkbox mb-3">
            <label asp-for="RememberMe">
                <input asp-for="RememberMe" type="checkbox" value="remember-me"> @Html.DisplayNameFor(m => m.RememberMe)
            </label>
        </div>
        @*</div>*@

        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

        <p>Don't have an account yet?</p>
        <a class="link" asp-controller="Account" asp-action="Register">Create an account</a>

    </form>
</main>

