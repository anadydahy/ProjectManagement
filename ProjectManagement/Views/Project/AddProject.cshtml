@model AddProject

@{
    ViewBag.Title = "Add Project";
}
<h1>Add Project</h1>

<form asp-action="AddProject" asp-controller="Project" method="post">

    <input type="hidden" asp-for="UserId" value=@Model.UserId />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>

    <label><input type="radio" asp-for="Status" value="false">In Progress</label>
    <br />
    <label><input type="radio" asp-for="Status" value="true">Finished</label>
    <br />

    <button type="submit" class="btn btn-primary">Add Project</button>

    <button asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</button>

</form>